/* pages/message/message.wxss */
.search {
  width:680rpx;
  background: rgb(241, 241, 241);
  font-size: 28rpx;
  line-height: 50rpx;
  color:rgb(185, 185, 185);
  text-align:center;
  margin:20rpx auto;
  border-radius: 20rpx;
}

.content {
  display: flex;
  justify-content: space-around;
  height:130rpx;
  position:relative;
}

image {
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  position:absolute;
  top:24rpx;
  left:30rpx;
}

.text {
  display: flex;
  position: absolute;
  width:600rpx;
  top:18rpx;
  left:144rpx;
  border-top:1rpx solid rgba(185, 185, 185, 0.315);
  padding:10rpx;
}

.info {
  display: flex;
  flex-direction: column;
  position: relative;
}



.nickname {
  margin-top:10rpx;
  font-size:30rpx;
  text-align: left;
}

.message {
  font-size:24rpx;
  margin-top:20rpx;
  color:rgb(207, 204, 204);
}

.right {
  position: absolute;
  top:10rpx;
  left:500rpx;
}

.time {
  font-size:24rpx;
  margin:10rpx;
  color:rgb(207, 204, 204);
}

.count {
  font-size:10px;
  font-weight: bolder;
  color:white;
  background:rgb(250, 99, 99);
  width:32rpx;
  height:32rpx;
  border-radius: 50%;
  text-align: center;
  margin:10rpx 20rpx;
}


